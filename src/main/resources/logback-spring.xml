<?xml version="1.0" encoding="UTF-8"?>
<configuration packagingData="true">
    <timestamp key="timestamp" datePattern="yyyy-MM-dd-HH-mm-ssSSS"/>

    <!-- Log Pattern -->
    <property name="CONSOLE_LOG_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level [%X{requestId}] [%logger{36}] - %msg%n"/>

    <!-- AWS CloudWatch Appender -->
    <appender name="aws_cloud_watch_log" class="ca.pjer.logback.AwsLogsAppender">
        <layout>
            <pattern>${CONSOLE_LOG_PATTERN}</pattern>
        </layout>
        <logGroupName>${logGroup}</logGroupName>
        <logStreamUuidPrefix>MyApp-${spring.profiles.active}-${timestamp}</logStreamUuidPrefix>
        <logRegion>${logRegion}</logRegion>
        <maxBatchLogEvents>${maxBatchEvents}</maxBatchLogEvents>
        <maxFlushTimeMillis>${maxFlushMillis}</maxFlushTimeMillis>
        <maxBlockTimeMillis>${maxBlockMillis}</maxBlockTimeMillis>
        <retentionTimeDays>${retentionDays}</retentionTimeDays>
        <accessKeyId>${accessKeyId}</accessKeyId>
        <secretAccessKey>${secretAccessKey}</secretAccessKey>
    </appender>

    <!-- Console Appender -->
    <appender name="console_log" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>${CONSOLE_LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- 로컬 환경 -->
    <springProfile name="local">
        <root level="INFO">
            <appender-ref ref="console_log"/>
        </root>
    </springProfile>

    <!-- 개발 환경 -->
    <springProfile name="dev">
        <root level="INFO">
            <appender-ref ref="aws_cloud_watch_log"/>
        </root>
    </springProfile>

    <!-- 운영 환경 -->
    <springProfile name="prod">
        <root level="INFO">
            <appender-ref ref="aws_cloud_watch_log"/>
        </root>
    </springProfile>
</configuration>
